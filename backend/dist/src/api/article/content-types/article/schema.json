{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "Artykuły w bazie wiedzy KSeF"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "content": {
            "type": "richtext"
        },
        "excerpt": {
            "type": "text",
            "maxLength": 255
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        },
        "gridImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        },
        "audioFile": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["audios"]
        },
        "audioPlaybackRate": {
            "type": "enumeration",
            "enum": ["x05", "x075", "x10", "x125", "x15"],
            "default": "x10"
        },
        "author": {
            "type": "component",
            "repeatable": false,
            "component": "article.author-info"
        },
        "comments": {
            "type": "component",
            "repeatable": true,
            "component": "article.comment"
        },
        "category": {
            "type": "enumeration",
            "enum": ["Podstawy", "Koszty", "Wdrożenie", "Prawo", "Techniczne", "Studia", "Aktualności"],
            "default": "Podstawy"
        },
        "difficulty": {
            "type": "enumeration",
            "enum": ["Podstawowy", "Średni", "Zaawansowany"],
            "default": "Podstawowy"
        },
        "contentType": {
            "type": "enumeration",
            "enum": ["Artykuł", "Przewodnik", "Infografika", "Video", "Checklist", "FAQ"],
            "default": "Artykuł"
        },
        "tags": {
            "type": "json"
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "isTrending": {
            "type": "boolean",
            "default": false
        },
        "isUpdated": {
            "type": "boolean",
            "default": false
        },
        "hasCTA": {
            "type": "boolean",
            "default": false
        },
        "ctaText": {
            "type": "string",
            "maxLength": 100
        },
        "ctaAction": {
            "type": "enumeration",
            "enum": [
                "Kalkulator NIE wdrożenia",
                "Mapa wiedzy",
                "Baza wiedzy",
                "Quiz gotowości",
                "Centrum pytań",
                "Kontakt",
                "Strona główna"
            ]
        },
        "metaTitle": {
            "type": "string",
            "maxLength": 60
        },
        "metaDescription": {
            "type": "text",
            "maxLength": 160
        },
        "keywords": {
            "type": "json"
        },
        "viewCount": {
            "type": "integer",
            "default": 0
        },
        "readingTime": {
            "type": "integer",
            "default": 5
        },
        "commentsCount": {
            "type": "integer",
            "default": 0
        },
        "ratingAverage": {
            "type": "decimal",
            "default": 0.0,
            "min": 0,
            "max": 5
        },
        "ratingCount": {
            "type": "integer",
            "default": 0
        },
        "seoScore": {
            "type": "integer",
            "min": 0,
            "max": 100,
            "default": 0
        },
        "seoQuality": {
            "type": "string",
            "default": "NOT_CHECKED"
        },
        "seoLastChecked": {
            "type": "datetime"
        },
        "seoIssues": {
            "type": "json"
        },
        "seoRecommendations": {
            "type": "json"
        },
        "seoReport": {
            "type": "json"
        }
    }
}
